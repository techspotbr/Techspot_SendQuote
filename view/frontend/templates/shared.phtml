<?php if ($block->hasSendquoteItems()): ?>
    <form class="form shared sendquote" action="<?= $block->escapeUrl($block->getUrl('sendquote/index/update')) ?>" method="post">
        <div class="sendquote table-wrapper">
            <table class="table data sendquote" id="sendquote-table">
                <caption class="table-caption"><?= $block->escapeHtml(__('Quote')) ?></caption>
