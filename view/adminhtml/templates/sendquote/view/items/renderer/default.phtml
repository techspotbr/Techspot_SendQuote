<?php /** @var $block \Magento\Sales\Block\Adminhtml\Items\Renderer\DefaultRenderer */ ?>
<?php $_item = $block->getItem() ?>
<tr>
    <td class="col-product-sku"><span><?= /* @escapeNotVerified */ $block->getItemProductColumn($_item, 'sku') ?></span></th>
    <td class="col-product-name"><span><?= /* @escapeNotVerified */ $block->getItemProductColumn($_item, 'name') ?></span></th>
    <td class="col-store-id"><span><?= /* @escapeNotVerified */ $block->getStoreName($_item->getStoreId()) ?></span></th>
    <td class="col-description"><?= /* @escapeNotVerified */ $_item->getDescription() ?></td>
    <td class="col-qty"><?= /* @escapeNotVerified */ $_item->getQty()*1 ?></td>
    <td class="col-price"><?= /* @escapeNotVerified */ $block->getFormatedPrice($_item->getPrice()) ?></td>
    <td class="col-custom-price">
        <?php if(null != $_item->getCustomPrice()): ?>
        <?= /* @escapeNotVerified */ $block->getFormatedPrice($_item->getCustomPrice()) ?>
        <?php else: ?>
        <?= /* @escapeNotVerified */ __('Waiting Quotation') ?>
        <?php endif; ?>
    </td>
    <td class="col-last-custom-price">
        <?php if(null != $_item->getUserId()): ?>
        <?= /* @escapeNotVerified */ $block->getAdminUserName($_item->getUserId()) ?>
        <?php else: ?>
        <?= /* @escapeNotVerified */ __('Waiting Quotation') ?>
        <?php endif; ?>
    </td>
    <td class="col-total last"><?= /* @escapeNotVerified */ $block->getFormatedPrice($block->getItemSubtotal($_item)) ?></td>
</tr>